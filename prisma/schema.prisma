generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           BigInt    @id @default(autoincrement())
  email        String    @unique @db.VarChar(255)
  password     String?   @db.VarChar()
  googleId     String?   @unique @db.VarChar()
  name         String?   @db.VarChar(255)
  username     String    @unique @db.VarChar(255)
  profilePic   String?   @db.VarChar()
  bio          String?   @db.Text
  dob          DateTime? @db.Timestamptz() // this is a timestamp of type- 'timestamp with time zone'
  refreshToken String?   @db.VarChar()
  createdAt    DateTime  @default(now()) @db.Timestamptz()
  isDeleted    Boolean   @default(false)

  Post Tweet[] // this is auto-generated by Prisma based on the relation below (authorId)

  @@index([name, username]) // this is doen to index the name and username columns because we will be searching on them frequently 
}

model Tweet {
  id BigInt @id @default(autoincrement())

  title       String   @db.VarChar(255)
  content     String   @db.Text
  published   Boolean  @default(false)
  impressions Int?     @default(0)
  createdAt   DateTime @default(now()) @db.Timestamptz()

  user   User   @relation(fields: [userId], references: [id])
  userId BigInt

  isDeleted Boolean @default(false)

  @@index([title, content])
}
